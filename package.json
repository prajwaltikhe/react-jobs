{
  "name": "react-india-jobs",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "client": "vite",
    "server": "json-server --watch src/jobs.json --port 8000",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
